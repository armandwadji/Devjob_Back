{% extends "base.html.twig" %}

{% block title %}
	Devjob -
	{{editMode ? "Edit" : "Nouvelle"}}
	offre
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">
			{{editMode ? "Édition" : "Création"}}
			d'une offre
		</h1>

        {# flash for warning message #}
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(formOffer, {'attr': {'novalidate': 'novalidate'}}) }}

            {# Nom de l'offre #}
            {{form_label(formOffer.name, 'Nom', {'label_attr': { 'class': 'form-label mt-4'} } )}}
            {{ form_widget(formOffer.name, {'attr': {'placeholder': "titre de l'offre",  }}) }}

            {# Description de l'offre #}
            {{form_label(formOffer.description, 'Description', {'label_attr': { 'class': 'form-label mt-4'} } )}}
            {{ form_widget(formOffer.description, { 'attr': { 'placeholder': "Description de l'offre",  } } ) }}

            {# Type de contrat de l'offre #}
            {{form_label(formOffer.contract, 'Type de contrat', {'label_attr': { 'class': 'form-label mt-4'} } )}}
            {{ form_widget(formOffer.contract, { 'attr': { 'class': 'form-select'  } } ) }}

            {# Url de l'offre #}
            {{form_label(formOffer.url, 'Url', {'label_attr': { 'class': 'form-label mt-4'} } )}}
            {{ form_widget(formOffer.url, { 'attr': { 'placeholder': "Lien pour postuler à cette offre",  } } ) }}

            <button type="submit" class='btn btn-primary mt-4'>
                {{editMode ? "Editer" : "Créer"}}
                mon offre
            </button>

		{{ form_end(formOffer) }}

	</div>
{% endblock %}
