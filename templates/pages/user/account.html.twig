                    <h3 class="mb-0 text-capitalize">{{app.user.company.name}}</h3>
                    <strong class="d-inline-block mb-2 text-primary">{{app.user.company.location|country_name}}</strong>
                    <p class="card-text mb-auto">Color : {{app.user.company.color}} </p>
                    <a href="#" class="stretched-link">Continue reading</a>
                </div>
                <div class="col-auto d-lg-block">
                    <img class='rounded-circle' style="width: 100%; height: 100%; max-height: 250px; object-fit: contain " src="{{ vich_uploader_asset(app.user.company, 'imageFile') }}" alt="Logo de {{app.user.company.name}}">
