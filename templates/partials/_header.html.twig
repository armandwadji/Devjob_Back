{% set route_name = app.request.attributes.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
	<div class="container-fluid container">

		<a class="navbar-brand" href="{{path('home.index')}}" style='{% if route_name in ['home.index', 'offer.show', 'candidate.apply'] %} opacity: 1 {% else %} opacity: 0.5  {% endif %}'>Devjob</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarColor01">
			<ul class="navbar-nav me-auto">

				{% if app.user %}

					{% if 'ROLE_ADMIN' in app.user.roles %}

						<li class="nav-item">
							<a class="nav-link {% if route_name in ['admin.society.index', 'admin.society.new', 'admin.society.show'] %} active {% endif %}" href="{{path('admin.society.index' )}}">Entreprises
								<span class="visually-hidden">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if route_name in ['admin.offer.index', 'admin.offers.show', 'admin.offer.new', 'admin.offer.update'] %} active {% endif %}" href="{{path('admin.offer.index' )}}">Offres
								<span class="visually-hidden">(current)</span>
							</a>
						</li>

					{% else %}

						<li class="nav-item">
							<a class="nav-link {% if route_name in ['offer.index', 'offer.candidates.show', 'offer.new'] %} active {% endif %}" href="{{path('offer.index', {company: app.user.company.id } )}}">Offres
								<span class="visually-hidden">(current)</span>
							</a>
						</li>

						{% if app.user.company.offer|length > 0 %}
							<li class="nav-item">
								<a class="nav-link {% if route_name in ['offer.all.candidates.show', 'candidate.show'] %} active {% endif %}" href="{{path('offer.all.candidates.show', {company: app.user.company.id } )}}">Candidats
									<span class="visually-hidden">(current)</span>
								</a>
							</li>
						{% endif %}

					{% endif %}

				{% endif %}

			</ul>

			<div class="d-flex ">
				<ul class="navbar-nav me-auto">

					{% if app.user %}
						<li class="nav-item dropdown ">

							{% if 'ROLE_ADMIN' not in app.user.roles and app.user.company.imageName %}
								<a class="pe-2 nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
									<img class='rounded-circle' style="width: 2.5rem; height: 2.5rem;" src="{{ vich_uploader_asset(app.user.company, 'imageFile') }}">
								</a>
							{% else %}
								<a class="nav-link dropdown-toggle {% if route_name in ['user.index', 'user.edit', 'user.delete' ]  %} active {% endif %}" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
									{{app.user.firstname ~  " " ~  app.user.lastname}}
								</a>
							{% endif %}

							<div class="dropdown-menu">

								{% if 'ROLE_ADMIN' not in app.user.roles %}
									<a class="dropdown-item" href="{{path('user.index', {id: app.user.id() } )}}">Voir profil</a>
									<a class="dropdown-item" href="{{path('user.edit', {id: app.user.id() })}}">Editer profil</a>
									<a class="dropdown-item" href="{{path('user.delete', {id: app.user.id() })}}">Supprimer profil</a>
								{% endif %}

								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="{{path("security.logout")}}">Deconnexion</a>
							</div>

						</li>
					{% else %}

						{# Connexion #}
						<li class="nav-item">
							<a class="nav-link {% if route_name == 'security.login' %} active {% endif %}" href="{{path('security.login')}}">Connexion
								<span class="visually-hidden">(current)</span>
							</a>
						</li>

						{# Inscription #}
						<li class="nav-item">
							<a class="nav-link {% if route_name == 'security.registration' %} active {% endif %}" href="{{path('security.registration')}}">Inscription
								<span class="visually-hidden">(current)</span>
							</a>
						</li>

					{% endif %}

				</ul>
			</div>

		</div>
	</div>
</nav>
